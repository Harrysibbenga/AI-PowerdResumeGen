---
interface Props {
    href?: string;
    variant?: "primary" | "secondary" | "outline";
    class?: string;
    type?: "button" | "submit" | "reset";
}

const {
    href,
    variant = "primary",
    class: className = "",
    type = "button",
} = Astro.props;

const baseClasses =
    "inline-flex items-center justify-center py-2 px-4 rounded-lg font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2";

const variantClasses = {
    primary:
        "bg-primary-600 hover:bg-primary-700 text-white focus:ring-primary-500",
    secondary:
        "bg-white hover:bg-gray-50 text-primary-700 focus:ring-primary-500",
    outline:
        "bg-transparent border-2 border-primary-600 text-primary-600 hover:bg-primary-50 focus:ring-primary-500",
};

const classes = `${baseClasses} ${variantClasses[variant]} ${className}`;
---

{
    href ? (
        <a href={href} class={classes}>
            <slot />
        </a>
    ) : (
        <button type={type} class={classes}>
            <slot />
        </button>
    )
}
