---
import MainLayout from "@/layouts/MainLayout.astro";
import TwoFactorForm from "@/components/vue/auth/TwoFactorForm.vue";
---

<MainLayout title="Verify 2FA | ResumeAI">
    <div
        class="min-h-[calc(100vh-300px)] flex items-center justify-center py-12 px-4"
    >
        <div
            class="max-w-md w-full space-y-8 bg-white p-10 rounded-xl shadow-md"
        >
            <h1 class="text-center text-2xl font-bold text-gray-900">
                Two-Factor Authentication
            </h1>
            <p class="text-center text-sm text-gray-600">
                Please enter the code from your authentication app.
            </p>
            <TwoFactorForm />
        </div>
    </div>
</MainLayout>
