---
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@/components/astro/home/HeroSection.astro";
import FeaturesSection from "@/components/astro/home/FeaturesSection.astro";
import TestimonialsSection from "@/components/astro/home/TestimonialsSection.astro";
---

<MainLayout
  title="AI Resume Generator | Specialized for Cybersecurity & Legal Professionals"
>
  <HeroSection />
  <FeaturesSection />
  <TestimonialsSection />

  <!-- Call to Action Section -->
  <section class="py-16 bg-primary-600 text-white">
    <div class="container mx-auto px-4 text-center max-w-4xl">
      <h2 class="text-3xl font-bold mb-4">Ready to Boost Your Career?</h2>
      <p class="text-primary-100 mb-8 text-lg">
        Join thousands of professionals who have accelerated their job search
        with industry-optimized resumes.
      </p>
      <a
        href="/register"
        class="bg-white text-primary-700 hover:bg-primary-50 py-3 px-8 rounded-lg font-medium inline-block transition-colors"
      >
        Get Started for Free
      </a>
    </div>
  </section>
</MainLayout>
